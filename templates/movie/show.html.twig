{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>{{ movie.title }}</h1>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">Id : {{ movie.id }}</li>
            <li class="list-group-item">Country : {{ movie.country }}</li>
            <li class="list-group-item">Released at : {{ movie.releasedAt|date('d M Y') }}</li>
            <li class="list-group-item">Genres : {{ movie.genres|join(', ') }}</li>
        </ul>
    </div>
{% endblock %}
